<!DOCTYPE html SYSTEM "http://www.thymeleaf.org/dtd/xhtml1-strict-thymeleaf-4.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org" lang="en">
<head th:replace="header.thyme::head(null, null)"></head>
<body onload="prettyPrint()">

<div id="wrap" class="content-justify">
    <div th:replace="menu.thyme::menu"></div>

    <div class="container">
        <main>
            <div class="position-relative overflow-hidden p-3 text-center">
                <div class="col-md-6 p-lg-5 mx-auto">
                    <h1 class="display-4 fw-bold"><i class="bi bi-heartbreak"></i></h1>
                    <h4 class="fw-normal text-body-secondary mb-3" th:text="${content.message}">
                    </h4>
                </div>
                <div class="col-md-6 mx-auto">
                    <!-- Subscriptions -->
                    <div th:replace="subscriptionform.thyme::subscription(${config.subscription_key},
                                                                          ${config.subscription_url},
                                                                          'unsubscribe')"></div>
                    <!-- End subscriptions -->
                </div>
            </div>
        </main>
    </div>
</div>

<div th:replace="footer.thyme::footer"></div>

<script th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : '')"
        th:src="${rootpath} + 'js/base.js'"></script>
</body>
</html>
